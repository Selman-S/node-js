<!--HOme posts-->
<section class="home-post py-5 mt-5">
  <div class="container">
    <div class="row g-4">
      <div class="col-md-3 mb-3 ">
        <div class="list-group ">
          <a href="/blogs" style="text-decoration: none; "
            class="list-group-item list-group-item-action  link-offset-1-hover">

            Tümü
          </a>
          <% category.forEach(element=> { %>
            <a href="/blogs/category/<%= element.idcategories %>" style="text-decoration: none; "
              class="list-group-item list-group-item-action link-offset-1-hover <% if (isSelectedId==element.idcategories) { %>
               active
              <% } %> ">

              <%= element.name %>
            </a>

            <% }) %>
        </div>
      </div>
      <div class="col row">

     
      <% blogs.forEach(element=> { %>
        <div class="col-md-6 col-lg-4 col-xl-3  position-relative">
          <div class="card shadow-sm mb-3">
            <span class="badge">
              <%= element.categoryid %>
            </span>
            <img src="/static/images/<%= element.image %>" alt="post Image" class="card-img-top img-thumbnail ">
            <div class="card-body">
              <h3 class="fs-5">
                <%=element.title %>
              </h3>
              <% if (element.newBadge) { %>
                <span class="badge badge-primary bg-danger position-absolute top-0 end-0">New</span>
                <% } %>
                  <p class="small fw-light">
                    <%=element.description %>
                  </p>
                  <a href="/blogs/<%= element.blogid %>" class="btn btn-sm btn-warning rounded-pill shadow-sm px-3">Read
                    more..</a>
            </div>
          </div>
        </div>
        <% }) %>

 </div>
    </div>

  </div>
</section>
<!--HOme posts-->