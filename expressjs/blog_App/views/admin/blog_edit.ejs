<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/head.ejs") %>
</head>

<body class="bg-light">

  <%- include("../partials/nav.ejs") %>

    <div class="container my-5 body-content">
      <h1 class="pt-3">Blog Edit</h1>
      <div class="row">
        <div class="col-md-12">
          <form class="" method="post">
            <div class="form-group row mb-3">
              <label for="title" class="col-sm-2 col-form-label">Title</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="title" name="title" placeholder="Add title"
                  value="<%= blog.title %>">
              </div>
            </div>
            <div class="form-group row mb-3">
              <label for="description" class="col-sm-2 col-form-label">Description</label>
              <div class="col-sm-10">
                <textarea rows="10" class="form-control" id="description" name="description"
                  placeholder="Add description"><%= blog.description %></textarea>
              </div>
            </div>
            <div class="form-group row mb-3">
              <label for="image" class="col-sm-2 col-form-label">Image</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" id="image" name="image" placeholder="Add image"
                  value="<%= blog.image %>">
                <img src="<%= blog.image %>" style="width: 100px;" class="img-fluid img-thumbnail mt-2" alt="">
              </div>
            </div>
            <div class="form-group row mb-3">
              <label for="category" class="col-sm-2 col-form-label">Category</label>
              <div class="col-sm-10">
                <select name="category" id="category" class="form-select">
                  <option value="-1">Se√ßiniz</option>
                  <% categories.forEach(category=> { %>
                    <% if (blog.categoryid==category.idcategories) { %>

                      <option value="<%= category.idcategories %>" selected>
                        <%= category.name %>
                      </option>
                      <% } else { %>
                        <option value="<%= category.idcategories %>">
                          <%= category.name %>
                        </option>

                        <% } %>

                          <% }) %>
                </select>
              </div>
            </div>
            <div class=" row form-group mb-3">
              <div class="col-sm-8 offset-sm-2">
                <div class="form-check">

                  <% if (blog.isHomePage) { %>
                    <input type="checkbox" class="form-check-input" name="isHomePage" checked id="isHomePage">
                    <% } else { %>
                      <input type="checkbox" class="form-check-input" name="isHomePage" id="isHomePage">
                      <% } %>
                        <label class="form-check-label" for="isHomePage">Is Home Page</label>
                </div>

              </div>
            </div>
            <div class=" row form-group mb-3">
              <div class="col-sm-8 offset-sm-2">
                <div class="form-check">

                  <% if (blog.isAccepted) { %>
                    <input type="checkbox" class="form-check-input" name="isAccepted" checked id="isAccepted">
                    <% } else { %>
                      <input type="checkbox" class="form-check-input" name="isAccepted" id="isAccepted">
                      <% } %>
                        <label class="form-check-label" for="isAccepted">Is Accepted</label>
                </div>

              </div>
            </div>
            <div class=" row form-group mb-3">
              <div class="col-sm-8 offset-sm-2">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include("../partials/footer.ejs") %>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>


</html>